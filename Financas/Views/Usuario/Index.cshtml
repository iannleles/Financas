@model IList<Financas.Entidades.Usuario>

@Html.ActionLink("Novo Usuario", "Form")

<table class="table table-hover" >
    <thead>
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>E-mail</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Email</td>
            </tr>
        }
    </tbody>


</table>

